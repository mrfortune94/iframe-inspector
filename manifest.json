{
  "manifest_version": 3,
  "name": "Iframe Inspector Vercel",
  "version": "1.0",
  "description": "Proxy, inspect, split-screen slot/game HTML. Advanced headers, script download, CORS tools.",
  "action": {
    "default_popup": "public/index.html",
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
